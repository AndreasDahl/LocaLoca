<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.group3.localoca.RoomList">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDay1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Image"
        android:id="@+id/btnGetImage"
        android:layout_below="@+id/tvDay1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgVFace"
        android:layout_below="@+id/btnGetImage"
        android:layout_toRightOf="@+id/tvDay1"
        android:layout_toEndOf="@+id/tvDay1"
        android:layout_marginTop="48dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvBuildings"
        android:layout_below="@+id/btnGetImage"
        android:layout_centerHorizontal="true"
        android:longClickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check if on AAU campus"
        android:id="@+id/btnLocationCheck"
        android:layout_alignBottom="@+id/btnGetImage"
        android:layout_toRightOf="@+id/btnGetImage"
        android:layout_toEndOf="@+id/btnGetImage" />

</RelativeLayout>
